<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/layout_main"
        android:layout_width="1dp"
        android:layout_height="1dp">

        <SurfaceView
            android:id="@+id/camera_preview_main"
            android:layout_width="1dp"
            android:layout_height="1dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_topleft"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/im1"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_click"></ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im1"
                android:layout_centerInParent="true"
                android:text="주행기록"
                android:textStyle="bold"
                android:textSize="26dp">

            </TextView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_topright"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im2"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_click2">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im2"
                android:layout_centerInParent="true"
                android:text="사고앨범"
                android:textStyle="bold"
                android:textSize="26dp">

            </TextView>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.05"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_nomal1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_click3">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im3"
                android:layout_centerInParent="true"
                android:text="주행모드"
                android:textStyle="bold"
                android:textSize="26dp">

            </TextView>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_bottomleft"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:src="@drawable/im4"></ImageView>

            <TextView
                android:id="@+id/weather1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im5"
                android:layout_centerInParent="true"
                android:text="날씨"
                android:textStyle="bold"
                android:textSize="26dp">

            </TextView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_nomal2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:src="@drawable/im5"></ImageView>

            <TextView
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im6"
                android:layout_centerInParent="true"
                android:text="온도"
                android:textStyle="bold"
                android:textSize="26dp">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_bottomright"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:src="@drawable/im6"></ImageView>

            <TextView
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im7"
                android:layout_centerInParent="true"
                android:text="풍속"
                android:textStyle="bold"
                android:textSize="26dp">

            </TextView>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>